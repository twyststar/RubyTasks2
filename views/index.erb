<h1>Welcome to the To Do App</h1>

<h3>Add New List</h3>
<form  action="/lists" method="post">
  <div class="form-group">
    <label class='form-label' for="name">Assign a name to your list:</label>
    <input type="text" name="name" id='name' placeholder="List Name" autofocus>
    <button type="submit" class="button btn">Add List</button>
  </div>
</form>
<p> Add tasks to any list:</p>

<form action="/tasks" method="post">
  <label for="list_id">Select a List</label>
<select id='list_id' name='list_id' type='text'>
  <% @lists.each() do |list| %>
    <option value="<%= list.id()%>"> <%= list.name() %> </option>
  <% end %>
</select>

  <label for="description">Description of the task:</label>
  <input id="description" name="description" type="text">

  <button type="submit">Add task</button>
</form>


<% if @lists.any?() %>
<p>Click on a list to see its tasks:</p>

<ul>
  <% @lists.each do |list| %>
  <li><a href="/lists/<%= list.id() %>"><%= list.name() %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are no lists yet!</p>
<% end %>
